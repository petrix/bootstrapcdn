extends layout.pug

block content
    h2.text-center.mb-4 Bootlint

    .card.bg-light.mt-4.p-4.text-center
        -const name   = 'bootlintjs';
        -const file   = config.bootlint[0].javascript;
        -const sri    = config.bootlint[0].javascriptSri;
        -const formId = `${name}_form`;

        .form-group.my-4
            label.font-weight-bold(for=formId) Complete JavaScript
            .input-group.input-group-lg
                input.form-control(id=formId, type='text', value=file)
                .input-group-append
                    button.btn.btn-dark.dropdown-toggle(type='button', data-toggle='collapse', data-target=`#${name}`, aria-expanded='false', aria-controls=name)
            span.form-text.text-muted Click to copy

        include _partials/jscode.pug

